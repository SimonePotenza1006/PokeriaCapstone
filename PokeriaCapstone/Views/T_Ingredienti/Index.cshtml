    <script>
        $(document).ready(function () {
            $.ajax({
                method: "GET",
                url: "GetBasi",
                success: function (data) {
                    console.log(data)
                    $.each(data, function (i, item) {
                        let div = "<div class='card col' style='width: 18rem;'>" +
                            "<img class='cart-img-top' id='" + item.Id + "'  src='/Content/Assets/FotoIngredienti/" + item.Foto + "'/>" +
                            "<div class='card-body'>" +
                            "<h6 class='card-title'>" + item.Nome + "</h6>" +
                            "<p class='card-text'> Prezzo aggiuntivo:" + item.Prezzo + "€</p>" +
                            "</div>" +
                            "<div>" +
                            "<a class='btn btn-primary add' onclick=addBase(" + item.Id + ")> Aggiungi </button>" +
                            "</div>" +
                            "</div>"
