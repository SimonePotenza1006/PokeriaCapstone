@model IEnumerable<PokeriaCapstone.Models.T_Ingredienti>


<a class="btn btn-success mt-3 mb-3" href="/T_Ingredienti/Create">
    Aggiungi ingrediente
</a>

<table class="table mb-0">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeIngrediente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoIngrediente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrezzoAggiuntivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FotoIngrediente)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeIngrediente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoIngrediente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrezzoAggiuntivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FotoIngrediente)
        </td>
        <td>
            @Html.ActionLink("Modifica", "Edit", new { id=item.IDIngrediente }, new { @class = "btn btn-warning me-1"}) 
            @Html.ActionLink("Cancella", "DeleteConfirmed", new { id=item.IDIngrediente }, new { @class = "btn btn-danger"})
        </td>
    </tr>
}

</table>


